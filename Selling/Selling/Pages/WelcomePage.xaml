<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Selling.Pages.WelcomePage"
             xmlns:i18n="clr-namespace:Selling.Lenguages;assembly=Selling"
             BackgroundColor="{StaticResource MainColor}"
             Title="{i18n:Translate Bienvenidos}"
             BindingContext="{Binding Main, Source={StaticResource Locator}}">
  <StackLayout
    VerticalOptions="Center"
    HorizontalOptions="Center"
    Spacing="20">
    <Label
      TextColor="White"
      FontSize="20"
      Text="{i18n:Translate Bienvenidos}"></Label>
    <Button
      Command="{Binding StartCommand}"
      HeightRequest="40"
      BorderRadius="20"
      BackgroundColor="White"
      TextColor="{StaticResource MainColor}"
      Text="{i18n:TranslateExtension Text=AddButton}"></Button>
  </StackLayout>
</ContentPage>